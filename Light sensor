#include <Adafruit_LiquidCrystal.h>

Adafruit_LiquidCrystal lcd_1(0);

void setup()
{
  pinMode(A1, INPUT);
  lcd_1.begin(16, 2);
}

void loop()
{
  if (analogRead(A1) > 0) {
    lcd_1.print("Light Present");
    delay(5000); // Wait for 5000 millisecond(s)
    lcd_1.clear();
  } else {
    lcd_1.print("Light Not Present");
    delay(5); // Wait for 5 millisecond(s)
    lcd_1.clear();
  }
}
